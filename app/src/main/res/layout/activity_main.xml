<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:background="@color/red"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <AutoCompleteTextView
            android:id="@+id/id_ac_tv_productAutoSearch"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@color/orange"
            android:hint="@string/hint_product_search"
            android:textColorHint="@color/white"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/id_btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/ic_action_cancel" />
    </FrameLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/detective_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/detective" />

    <TextView android:id="@+id/login_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".." />
    <TextView android:id="@+id/market_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".." />

</LinearLayout>